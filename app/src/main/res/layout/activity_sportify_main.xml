<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SportifyMain">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/backButton"
        android:src="@drawable/left_arrow"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/editSche"
        android:onClick="addClick"
        android:src="@drawable/application_icon"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/newSche"
        android:onClick="addClicked"
        android:src="@drawable/add_icon"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/editSche"
        android:layout_toStartOf="@+id/editSche" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:id="@+id/monday"
        android:layout_below="@+id/backButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Tuesday"
        android:id="@+id/tuesday"
        android:layout_below="@+id/monday"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        android:id="@+id/wednesday"
        android:layout_below="@+id/tuesday"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Thursday"
        android:id="@+id/thursday"
        android:layout_below="@+id/wednesday"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Friday"
        android:id="@+id/friday"
        android:layout_below="@+id/thursday"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Saturday"
        android:id="@+id/saturday"
        android:layout_below="@+id/friday"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Sunday"
        android:id="@+id/sunday"
        android:layout_below="@+id/saturday"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/monText"
        android:layout_alignTop="@+id/monday"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/tuesday"
        android:layout_toEndOf="@+id/monday"
        android:enabled="true"
        android:editable="true"
        android:clickable="true"
        android:focusableInTouchMode="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tuesText"
        android:layout_below="@+id/monText"
        android:layout_alignBottom="@+id/tuesday"
        android:layout_alignEnd="@+id/monText"
        android:layout_toEndOf="@+id/monday"
        android:enabled="true"
        android:editable="true"
        android:clickable="true"
        android:focusableInTouchMode="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/wedText"
        android:layout_below="@+id/tuesText"
        android:layout_alignBottom="@+id/wednesday"
        android:layout_alignEnd="@+id/tuesText"
        android:layout_toEndOf="@+id/wednesday"
        android:enabled="true"
        android:editable="true"
        android:clickable="true"
        android:focusableInTouchMode="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/thurText"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/thursday"
        android:layout_alignTop="@+id/thursday"
        android:layout_toEndOf="@+id/thursday"
        android:enabled="true"
        android:editable="true"
        android:clickable="true"
        android:focusableInTouchMode="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/friText"
        android:layout_alignTop="@+id/friday"
        android:layout_alignBottom="@+id/friday"
        android:layout_alignEnd="@+id/thurText"
        android:layout_toEndOf="@+id/friday"
        android:enabled="true"
        android:editable="true"
        android:clickable="true"
        android:focusableInTouchMode="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/satText"
        android:layout_above="@+id/sunday"
        android:layout_alignTop="@+id/saturday"
        android:layout_alignEnd="@+id/friText"
        android:layout_toEndOf="@+id/saturday"
        android:enabled="true"
        android:editable="true"
        android:clickable="true"
        android:focusableInTouchMode="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/sunText"
        android:layout_below="@+id/satText"
        android:layout_alignEnd="@+id/satText"
        android:layout_alignBottom="@+id/sunday"
        android:layout_toEndOf="@+id/saturday"
        android:enabled="true"
        android:editable="true"
        android:clickable="true"
        android:focusableInTouchMode="true" />

</RelativeLayout>
