<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sportify.sportifyapp.MainPage">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:text="Schedule"
        android:id="@+id/mainSche"
        android:background="#fa42349b"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:text="Day-by-Day"
        android:id="@+id/mainDay"
        android:background="#fa42349b"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/mainSche"
        android:textSize="20dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/logo"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/textView"
        android:background="@drawable/dumbbell2"
        android:src="@drawable/dumbbell2"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sportify"
        android:id="@+id/textView"
        android:width="175dp"
        android:textSize="31dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/mainSche"
        android:layout_marginEnd="45dp"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>
